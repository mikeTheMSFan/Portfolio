</div><!-- /.site-preloader-wrap -->

<header class="header header-one">
    <div class="primary-header-one primary-header">
        <div class="container">
            <div class="primary-header-inner">
                <div class="header-logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="/imgs/MRobinson-Logo-small.svg" alt="Logo"/>
                    </a>
                </div><!-- /.header-logo -->
                <div class="header-menu-wrap">
                    <ul class="dl-menu">
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Index" asp-fragment="about">About</a>
                        </li>
                        <li>
                            <a asp-action="Privacy" asp-controller="Home">Privacy</a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Index" asp-fragment="projects">Projects</a>
                        </li>
                        <li>
                            <a asp-controller="Blogs" asp-action="Index">Blog</a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <partial name="_LoginPartial"/>
                    </ul>
                </div><!-- /.header-menu-wrap -->
                <div class="header-right">
                    <div class="search-icon dl-search-icon">
                        <i class="las la-search"></i>
                    </div>
                    <!-- Burger menu -->
                    <div class="mobile-menu-icon">
                        <div class="burger-menu">
                            <div class="line-menu line-half first-line"></div>
                            <div class="line-menu"></div>
                            <div class="line-menu line-half last-line"></div>
                        </div>
                    </div>
                </div><!-- /.header-right -->
            </div><!-- /.primary-header-one-inner -->
        </div>
    </div><!-- /.primary-header-one -->
</header><!-- /.header-one -->

<div id="dl-popup-search-box">
    <div class="box-inner-wrap d-flex align-items-center">
        <form id="form" asp-action="BlogSearch" asp-controller="Blogs" role="search">
            <input id="popup-search"
                   type="text"
                   name="term"
                   placeholder="Search for a blog here..."/>
            <button id="popup-search-button" type="submit" name="submit">
                <i class="las la-search"></i>
            </button>
        </form>
    </div>
</div><!-- /#dl-popup-search-box -->
