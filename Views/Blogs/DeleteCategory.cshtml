@model Category
@{
    ViewData["Title"] = "Mike Robinson's Site - Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <!-- Begin Delete Blogs -->
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Category</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.Author!.FullName)
            </dd>
        </dl>
        <form asp-action="DeleteCategory">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </div>
</div>